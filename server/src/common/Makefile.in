SHELL = @BOURNE_SHELL@

VPATH = @srcdir@
srcdir = @srcdir@

SRCS = \
	anim.c \
	arch.c \
	button.c \
	exp.c \
	holy.c \
	info.c \
	image.c \
	item.c \
	links.c \
	living.c \
	loader.c \
	logger.c \
	los.c \
	map.c \
	mempool.c \
	object.c \
	porting.c \
	quest.c \
	player.c \
	re-cmp.c \
	region.c \
	readable.c \
	recipe.c \
	shstr.c \
	stringbuffer.c \
	time.c \
	treasure.c \
	utils.c

ALLFILES=loader.l $(SRCS) README Makefile.in

OBJS = $(SRCS:.c=.o)

ARFLAGS = cq

AR = @AR@
RM = @RM@

RANLIB = @RANLIB@

DEPEND = @DEPEND@
FLEX = @LEX@

CFLAGS = @CFLAGS@ -fPIC $(EXTRA_CFLAGS)

INCLUDES= $(EXTRA_INCLUDES) -I../include

SED= @SED@

libcross.a: $(OBJS)
	$(RM) -f $@
	$(AR) $(ARFLAGS) $@ $(OBJS)
	$(RANLIB) $@

depend:
	$(DEPEND) $(DEPENDFLAGS) -- $(CFLAGS) $(INCLUDES) -- $(SRCS)

# Nothing to install here
install::


proto:
	cproto -e -o ../include/libproto.h.bak -D__CPROTO__ $(INCLUDES) $(SRCS)
	echo "#ifndef __CPROTO__" > ../include/libproto.h
	$(SED) -e "s/#if __STDC__/#ifdef __STDC__/" -e "s/__signed/signed/g" -e "/__inline/d" -e "/YY_BUFFER/d" -e "/yy_size_t/d" -e "s/(void);/();/g" -e "s/\/\* /\n\/\* /" -e "1s/^.//" < ../include/libproto.h.bak >> ../include/libproto.h
	echo "#endif" >> ../include/libproto.h
	chmod 644 ../include/libproto.h
	$(RM) -f ../include/libproto.h.bak

archive:
	if [ ! -d $(ARCHIVE)/common ]; then $(MKDIR) $(ARCHIVE)/common; fi
	$(CP) $(ALLFILES) $(ARCHIVE)/common

loader.c: loader.l
	$(FLEX) -i -t loader.l > loader.c


clean::
	$(RM) -f $(OBJS)

distclean:: clean
	$(RM) -f Makefile libcross.a loader.c

.c.o:
	$(CC) $(CFLAGS) $(INCLUDES)  -c $*.c

all:: libcross.a

