SRCS = \
	plugin_common.c 

OBJS = $(SRCS:.c=.o)

ARFLAGS = cq

AR = @AR@
RM = @RM@

RANLIB = @RANLIB@

DEPEND = @DEPEND@

CFLAGS = @CFLAGS@ -fPIC $(EXTRA_CFLAGS)

INCLUDES = -I./include -I../../include

plugin_common.a: $(OBJS)
	$(RM) -f $@
	$(AR) $(ARFLAGS) $@ $(OBJS)
	$(RANLIB) $@

depend:
	$(DEPEND) $(DEPENDFLAGS) -- $(CFLAGS) $(INCLUDES) -- $(SRCS)

# Nothing to install here
install::


clean::
	$(RM) -f $(OBJS)

distclean:: clean
	$(RM) -f Makefile plugin_common.a

.c.o:
	$(CC) $(CFLAGS) $(INCLUDES)  -c $*.c

all:: plugin_common.a

