VPATH = @srcdir@

LOCAL_LIBRARIES = \
	../common/libcross.a \
	../random_maps/random_map.a \
	../types/libtypes.a \
	../zlib/zlib.a \
	../socket/socket.a

SRCS = \
	alchemy.c \
	apply.c \
	attack.c \
	ban.c \
	c_chat.c \
	c_misc.c \
	c_move.c \
	c_new.c \
	c_object.c \
	c_range.c \
	c_wiz.c \
	commands.c \
	daemon.c \
	hiscore.c \
	gods.c \
	init.c \
	login.c \
	main.c \
	move.c \
	party.c \
	player_shop.c \
	plugins.c \
	rune.c \
	shop.c \
	skills.c \
	skill_util.c \
	spell_effect.c \
	spell_util.c \
	swap.c \
	time.c \
	timers.c \
	pathfinder.c \
	weather.c

ALLFILES = $(SRCS) Makefile.in

DEPEND = @DEPEND@

SED = @SED@

OBJS = $(SRCS:.c=.o)

CFLAGS = @CFLAGS@ $(EXTRA_CFLAGS)

INCLUDES= $(EXTRA_INCLUDES) -I../include

LDFLAGS = @LDFLAGS@

LIBS = @LIBS@ $(EXTRA_LIBS)

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@

INSTALL = @INSTALL@

MKDIR = @MKDIR@
CC = @CC@
RM = @RM@

atrinik_server: $(OBJS) $(LOCAL_LIBRARIES)
	$(RM) -f $@
	$(CC) $(LDFLAGS) -o $@ $(OBJS) $(LOCAL_LIBRARIES) $(LIBS)


../common/libcross.a:
	(cd ../common; $(MAKE) $(MFLAGS) all)

../random_maps/random_map.a:
	(cd ../random_maps; $(MAKE) $(MFLAGS) all)

../socket/socket.a:
	(cd ../socket; $(MAKE) $(MFLAGS) all)

depend:
	$(DEPEND) $(DEPENDFLAGS) -- $(CFLAGS) $(INCLUDES) -I../include -- $(SRCS)

proto:
	cproto -o ../include/sproto.h.bak -D__CPROTO__ $(INCLUDES) $(SRCS)
	echo "#ifndef __CPROTO__" > ../include/sproto.h
	$(SED) -e "s/#if __STDC__/#ifdef __STDC__/" -e "s/__signed/signed/g" -e "/__inline/d" -e "/YY_BUFFER/d" -e "s/(void);/();/g" -e "s/\/\* /\n\/\* /" -e "1s/^.//" < ../include/sproto.h.bak >> ../include/sproto.h
	echo "#endif" >> ../include/sproto.h
	chmod 644 ../include/sproto.h
	$(RM) -f ../include/sproto.h.bak

archive:
	@if [ ! -d $(ARCHIVE)/server ]; then $(MKDIR) $(ARCHIVE)/server; fi
	$(CP) $(ALLFILES) $(ARCHIVE)/server

clean::
	$(RM) -f atrinik_server $(OBJS) Makefile.bak

distclean:: clean
	$(RM) -f Makefile

.c.o:
	$(CC) $(CFLAGS) $(INCLUDES) -c $< -o $@

all: atrinik_server

patchlist::
	@echo $(SRCS) > .patchlist

install:: atrinik_server
	$(INSTALL) atrinik_server ${bindir}
