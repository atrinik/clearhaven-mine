VPATH = @srcdir@

SRCS = \
	image.c \
	info.c \
	init.c \
	item.c \
	loop.c \
	lowlevel.c \
	metaserver.c \
	request.c \
	sounds.c

ALLFILES = $(SRCS) README Makefile.in

OBJS = $(SRCS:.c=.o)

ARFLAGS = cq

AR = @AR@
RM = @RM@
SED = @SED@

RANLIB = @RANLIB@

DEPEND = @DEPEND@

CFLAGS = @CFLAGS@ $(EXTRA_CFLAGS)

INCLUDES = $(EXTRA_INCLUDES) -I../include

socket.a: $(OBJS)
	$(RM) -f $@
	$(AR) $(ARFLAGS) $@ $(OBJS)
	$(RANLIB) $@

depend:
	$(DEPEND) $(DEPENDFLAGS) -- $(CFLAGS) $(INCLUDES) -- $(SRCS)

# Nothing to install here
install::

proto:
	cproto -o ../include/sockproto.h.bak $(INCLUDES) $(SRCS)
	$(SED) -e "s/#if __STDC__/#ifdef __STDC__/" -e "s/__signed/signed/g" -e "/__inline/d" -e "/YY_BUFFER/d" -e "s/(void);/();/g" -e "s/\/\* /\n\/\* /" -e "1s/^.//" < ../include/sockproto.h.bak > ../include/sockproto.h
	chmod 644 ../include/sockproto.h
	$(RM) -f ../include/sockproto.h.bak

archive:
	if [ ! -d $(ARCHIVE)/socket ]; then $(MKDIR) $(ARCHIVE)/socket; fi
	$(CP) $(ALLFILES) $(ARCHIVE)/socket

clean:
	$(RM) -f $(OBJS) Makefile.bak

distclean: clean
	$(RM) -f Makefile socket.a

.c.o:
	$(CC) $(CFLAGS) $(INCLUDES)  -c $*.c

all:: socket.a

