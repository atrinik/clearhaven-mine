SHELL = @BOURNE_SHELL@

SRCS := \
	$(wildcard *.c) \
	../common/re-cmp.c

OBJS := $(patsubst %.c, %.o, $(SRCS))

ARFLAGS = cq

AR = @AR@
RM = @RM@

RANLIB = @RANLIB@

DEPEND = @DEPEND@

CFLAGS = @CFLAGS@ -fPIC $(EXTRA_CFLAGS)

INCLUDES = $(EXTRA_INCLUDES) -I../include

SED = @SED@

libtypes.a: $(OBJS)
	$(RM) -f $@
	$(AR) $(ARFLAGS) $@ $(OBJS)
	$(RANLIB) $@

depend:
	$(DEPEND) $(DEPENDFLAGS) -- $(CFLAGS) $(INCLUDES) -- $(SRCS)

# Nothing to install here
install::


proto:
	cproto -e -o ../include/libtypes.h.bak $(INCLUDES) $(wildcard *.c)
	$(SED) -e "s/#if __STDC__/#ifdef __STDC__/" -e "s/__signed/signed/g" -e "/__inline/d" -e "/YY_BUFFER/d" -e "s/(void);/();/g" -e "s/\/\* /\n\/\* /" -e "1s/^.//" < ../include/libtypes.h.bak > ../include/libtypes.h
	chmod 644 ../include/libtypes.h
	$(RM) -f ../include/libtypes.h.bak

clean::
	$(RM) -f $(OBJS)

distclean:: clean
	$(RM) -f Makefile libtypes.a

.c.o:
	$(CC) $(CFLAGS) $(INCLUDES)  -c $*.c

all:: libtypes.a

